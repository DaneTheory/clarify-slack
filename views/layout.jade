doctype html
html
  head
    link(rel='stylesheet', href='/lib/css/bootstrap.css')
    link(rel='stylesheet', href='/lib/css/font-awesome.css')
    link(rel='stylesheet', href='/lib/css/jplayer.blue.monday.css')
    link(rel='stylesheet', href='/css/search.css')
    link(rel='stylesheet', href='/css/style.css')
  body(ng-app='calls')
    header(class='navbar navbar-fixed-top navbar-default')
      div(class='container')
        div(class='navbar-header')
          a(class='navbar-brand', href='/') Clarify Slack
        if (user)
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/') Calls
            ul.nav.navbar-nav.navbar-right
                if (user)
                    li
                        a(href='/profile') Profile
                    li
                        a(href='/sign_out') Sign out
                else
                  a(href='/sign_in') Sign in
        else
          ul.nav.navbar-nav.navbar-right
              li
                a(href='/sign_up') Sign Up

    .content
      block content

    script(src='/lib/js/jquery.js')
    script(src='/lib/js/lodash.js')
    script(src='/lib/js/jquery.jplayer.js')
    script(src='/lib/js/bootstrap.js')
    script(src='/lib/js/socket.io.js')
    block scripts

